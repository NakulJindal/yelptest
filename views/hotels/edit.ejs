<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">Edit Hotel</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/hotels/<%= hotel._id %>?_method=PUT"
      method="post"
      class="validated-form"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          value="<%= hotel.title %>"
          name="hotel[title]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          value="<%= hotel.location %>"
          name="hotel[location]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Hotel Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="hotel[price]"
            value="<%=hotel.price %>"
            required
          />
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="hotel[description]"
          required
        >
          <%= hotel.description%>
        </textarea>
      </div>
      <div class="mb-3">
        <div class="custom-file">
          <label for="image" class="form-label"> Upload Images </label>
          <input
            type="file"
            class="form-control custom-file-input"
            id="image"
            name="image"
            multiple
          />
          <label class="custom-file-label"></label>
        </div>
      </div>
      <div class="mb-3">
        <% hotel.images.forEach(function(img, i) { %>
        <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="" />
        <div class="form-check-inline">
          <input
            type="checkbox"
            id="image-<%=i%>"
            name="deleteImages[]"
            value="<%=img.filename%>"
          />
        </div>
        <label for="image-<%=i%>">Delete?</label>
        <% })%>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update Hotel</button>
      </div>
    </form>
    <a href="/hotels">Back To Hotel</a>
  </div>
</div>
